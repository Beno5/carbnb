
<div class="container">




  <div class="row">
    <div class="column1">
      <h1 class="bold-text">Booking Overview</h1>
      <p class="bold-text">Here are the details of the car that you have booked:</p>
      <%= simple_form_for [@car, @booking] do |f| %>
        <%= f.input :start_time %>
        <%= f.input :end_time %>
      <% end %>
      <br>
    </div>
    <div class="column2">
      <h1 class="bold-text">Payment Options</h1>
      <p class="bold-text">Here are the payment options for renting the car:</p>
      <div class="mainContainer">
        <div class="cardHolder">
          <div class="header">
            <div class="heading center">CHECKOUT</div>
            <div class="stepHeading center">Payment Method</div>
            <div class="card">
              <div class="top part">
                <img src="https://images.unsplash.com/photo-1560472355-536de3962603?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="visa-1.png" border="0" />
              </div>
              <div class="middle part">
                <div class="infoheader vcenter">CARD NUMBER</div>
                <div class="infocontent number vcenter">
                  <div class="num center, bold-text">****</div>
                  <div class="num center, bold-text">****</div>
                  <div class="num center, bold-text">4658</div>
                  <div class="num center, bold-text">****</div>
                </div>
              </div>
              <div class="bottom part">
                <div class="holderInfo">
                  <div class="infoheader vcenter">CARD HOLDER</div>
                  <div class="infocontent name vcenter, bold-text">JOHN DOE</div>
                </div>
                <div class="expDate">
                  <div class="infoheader vcenter">EXP. DATE</div>
                  <div class="infocontent date vcenter, bold-text">09/2023</div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="status vcenter, bold-text"> <i class="fa fa-check" aria-hidden="true"></i>
          Option : Credit/Debit Card
        </div>
        <h5 class="center, bold-text">OTHER PAYMENT OPTIONS</h5>
        <div class="options vcenter">
          <div class="opt">
            <div class="icon center">
              <i class="fa fa-money" aria-hidden="true"></i>
            </div>
            <div class="optname center">Bank Transfer</div>
          </div>
          <div class="opt">
            <div class="icon center">
              <i class="fa fa-btc" aria-hidden="true"></i>
            </div>
            <div class="optname center">BitCoin</div>
          </div>
          <div class="opt">
            <div class="icon center">
              <i class="fa fa-google-wallet" aria-hidden="true"></i>
            </div>
            <div class="optname center">Paypal</div>
          </div>
        </div>
        <div class="payment vcenter">
          <div class="amount">
            <div class="infoheader vcenter">Total Amount</div>
            <div class="infocontent val vcenter">$ 1,960</div>
          </div>
        
  <%= link_to "Confirm your booking", bookings_path, class: "btn btn-primary" %>

        </div>
      </div>
      <br>
    </div>  
  <div>

</div>
<br>
