<div class="container">

  <h1>cars</h1>


<%= form_tag cars_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a car"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="index-container">


     
  <div class="cards">
    <% @cars.each do |car| %>
      <%= link_to car_path(car) do %>
        <div class="card-category"> 
          <div class="car-name-card"><%= car.model %></div>
           <div class="car-image-card"> 
           <% if car.photo.attached? %>
             <%= cl_image_tag car.photo.key, height: 80, width: 150, crop: :fill %></div>
             
           <% end %>
          <div class="car-info-card">
            <p><%= car.price %>â‚¬ pro Tag</p>
            <p><%= car.consumption %> l/km</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
</div>




</div>

