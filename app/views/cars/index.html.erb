<div class="container">

  


<%= form_tag cars_path, method: :get do %>
<h1 class="bold-text">cars</h1>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a car"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="index-container">
  <div class="cards">
    <% @cars.each do |car| %>
      <%= link_to car_path(car) do %>

        <div class="Card"> 
          <h2 class="Card__name"><%= car.model %></h2>
          <% if car.photo.attached? %>
          <div class="Card__image" style="background: url(<%= cl_image_tag car.photo.key, height: 80, width: 150, crop: :fill %>)">
             </div><% end %>
          <div class="Card__info">

          
         

            <p><%= car.price %>â‚¬ pro Tag</p>
            <p><%= car.consumption %> l/km</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

