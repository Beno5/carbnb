<div class="container">

  <div class="index-form">
    <%= form_tag cars_path, method: :get do %>
      <h1 class="bold-text">cars</h1>
      <div class="index-form-search">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a car"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="index-container">
    <div class="column">
      <div class="cards">
        <% @cars.each do |car| %>
          <div class="Card"> 
          <%= link_to car_path(car) do %>
              <% if car.photo.attached? %>
                <div class="Card__image" style="background: url('<%= cl_image_path car.photo.key, height: 80, width: 150, crop: :fill %>')">
                  <h2 class="Card__name"><%= car.model %></h2>
                </div>
              <% end %>
              <div class="Card__info">
                <p><%= car.price %>â‚¬ pro Tag</p>
                <p><%= car.consumption %> l/km</p>
              </div>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="column">
      <div id="map" style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
</div>

